<main id="main" style="margin-top: 80px;">
    <!-- ======= Popular Courses Section ======= -->
    <section id="popular-courses" class="courses pt-4">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
<!--                <h2>My courses</h2>-->
                <p>My courses</p>
            </div>

            {{#each row}}
            <div class="row" data-aos="zoom-in" data-aos-delay="100">
                {{#each this}}
                    <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                        {{> course_item this}}
                    </div>
                {{/each}}
            </div>
            {{/each}}

            <div class="row" data-aos="zoom-in" data-aos-delay="100">
                <div
                        class="col-lg-3 col-md-6 d-flex align-items-stretch mt-4 mt-lg-0"
                >
                    <div class="course-item">
                        <img
                                src="/public/images/course-3.jpg"
                                class="img-fluid"
                                alt="..."
                        />
                        <div class="course-content">
                            <div
                                    class="d-flex justify-content-between align-items-center mb-3"
                            >
                                <h4>Content</h4>
                                <p class="price">$180</p>
                            </div>

                            <h3><a href="course-details.html">Copywriting</a></h3>
                            <div
                                    class="trainer d-flex justify-content-between align-items-center"
                            >
                                <div class="trainer-profile d-flex align-items-center">
                                    <i class="fa-solid fa-chalkboard-user"></i>
                                    <span>Antonio</span>
                                </div>
                                <div class="trainer-rank d-flex align-items-center">
                                    <i class="fa-sharp fa-solid fa-star"></i>&nbsp;4.5
                                    <span>(65&nbsp;<i class="fa-solid fa-user"></i>)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Course Item-->
            </div>
        </div>
    </section>
    {{#if pages}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{#forLoop 1 pages 1}}
                    <li class="page-item {{#if_eq this currentPage}} active {{/if_eq}}"><a class="page-link" href="/my-courses/learning/pages/{{this}}">{{this}}</a></li>
                {{/forLoop}}
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    {{/if}}

    <!-- End Popular Courses Section -->
</main>

